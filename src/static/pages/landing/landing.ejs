</section>
<section class="pick-side">
    <div class="pick-side__background-root">

    </div>
    <div class="pick-side__side">
        <button class="pick-side__side-button pick-side__side-button--heroes glow-button">Heroes</button>
    </div>
    <div class="pick-side__side">
        <button class="pick-side__side-button pick-side__side-button--villains glow-button">Bugman</button>
    </div>
    <h2 class="pick-side__title">
        Which side would you choose?
    </h2>
</section>

    <%- include('../../shared/components/footer/footer') %>
  </body>
</html>
